<div class="well">
{{#if model.length}}
  
  <table class="table table-condensed">
    <tbody>
{{#each model as |edition|}}
      <tr>
        <td>{{moment-format edition.fecha}}</td>
        <td><span class="label label-info">[{{edition.name}}]</span></td>
        <td>
          {{#link-to 'editions.edit' edition.id class='btn btn-success btn-xs'}}
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>{{/link-to}}
        </td>
        <td>
          <button class="btn btn-danger btn-xs" {{action 'deleteEdition' edition}}>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </button>
        </td>
{{#if (is-after edition.fecha comparison precision='second')}}
        <td>
          {{#link-to 'teams.new' edition.id class='btn btn-success btn-xs'}}
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
          {{/link-to}}
        </td>
        <td>
          {{#link-to 'teams.edit' edition.id class='btn btn-success btn-xs'}}
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
          {{/link-to}}
        </td>
{{else}}
        <td>...</td>
        <td>...</td>
{{/if}}
      </tr>
{{/each}}
    </tbody>
  </table>
{{else}}

<div class="alert alert-warning">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong><span class="glyphicon glyphicon-empty" aria-hidden="true"></span> NO RECORDS FOUND</strong>
</div>

{{/if}}
</div>
