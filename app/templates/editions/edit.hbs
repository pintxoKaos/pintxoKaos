<div class="form-horizontal">
  <div class="form-group">
    <div class="col-sm-4">
      {{input type="text" value=model.name class="form-control" placeholder="The name of the Edition"}}
    </div>
    <div class="col-sm-4">
      {{input type="date" value=model.fecha class="form-control" placeholder="dd/mm/aaaa"}}
    </div>
    <div class="col-sm-4">
      <button type="submit" class="btn btn-success" {{action 'saveEdition' model}}><span class="glyphicon glyphicon-floppy-saved" aria-hidden="true"></span></button>
    </div>
  </div>
</div>
