
<h1>
<button class='btn btn-default' {{action 'createUser' 'password'}} title="logout">
  <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
</button>
</h1>

<div class='jumbotron'>
	{{input type='text' class='form-control' value=displayName placeholder='nick'}}
	{{input type='email' class='form-control' value=email placeholder='...@...'}}
	{{input type='password' class='form-control' value=password placeholder='******'}}

  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}

</div>

{{outlet}}
