<div class="well">
{{model.length}}
{{#if model.length}}
  <table class="table table-condensed">
    <tbody>
{{#each model as |team|}}
      <tr>
        <td>{{team.name}}</td>
        <td>{{team.edition}}</td>
        <td>
          {{#link-to 'teams.edit' edition.id class='btn btn-success btn-xs'}}
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>{{/link-to}}
        </td>
        <td>
          <button class="btn btn-danger btn-xs" {{action 'deleteEdition' edition}}>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </button>
          </td>
      </tr>
{{/each}}
    </tbody>
  </table>
{{/if}}
</div>
